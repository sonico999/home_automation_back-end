<?xml-stylesheet type="text/xsl" href="xs3p.xsl"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	targetNamespace="ports.settings.home_automation" xmlns="ports.settings.home_automation"
	xmlns:jxb="http://java.sun.com/xml/ns/jaxb" xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
	jxb:version="2.0">

	<xsd:complexType name="PortsType">
		<xsd:sequence>
			<xsd:element name="port" type="PortType" minOccurs="1"
				maxOccurs="unbounded" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="PortType">
		<xsd:sequence>
			<xsd:element name="LightConfiguration" type="ChooseType" minOccurs="1"
				maxOccurs="unbounded" />
			<xsd:element name="MotorConfiguration" type="ChooseType" minOccurs="1"
				maxOccurs="unbounded"/>
			<xsd:element name="SensorConfiguration" type="ADCType" minOccurs="1"
				maxOccurs="unbounded"/>
			<xsd:element name="StepperConfiguration" type="IOType" minOccurs="1"
				maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>

<xsd:complexType name="ChooseType">
		<xsd:sequence>
			<xsd:choice>
				<xsd:element name="PWM" type="PWMType" />
				<xsd:element name="IO" type="IOType" />
				<xsd:element name="ADC" type="ADCType" />
			</xsd:choice>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="Info">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" />
			<xsd:element name="Port" type="xsd:int" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="PWMType">
		<xsd:sequence>
			<xsd:element name="type" type="xsd:string" fixed="PWM" />
			<xsd:element name="PWMPorts">
				<xsd:complexType>
					<xsd:sequence>
						<xsd:sequence>
							<xsd:element name="port" type="Info" minOccurs="1"
								maxOccurs="unbounded"  />
						</xsd:sequence>
					</xsd:sequence>
				</xsd:complexType>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="ADCType">
		<xsd:sequence>
			<xsd:element name="type" type="xsd:string" fixed="ADC" />
			<xsd:element name="ADCPorts">
				<xsd:complexType>
					<xsd:sequence>
						<xsd:sequence>
							<xsd:element name="port" type="Info" minOccurs="1"
								maxOccurs="unbounded"  />
						</xsd:sequence>
					</xsd:sequence>
				</xsd:complexType>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="IOType">
		<xsd:sequence>
			<xsd:element name="type" type="xsd:string" fixed="IO" />
			<xsd:element name="IOPorts">
				<xsd:complexType>
					<xsd:sequence>
						<xsd:sequence>
							<xsd:element name="port" type="Info" minOccurs="1"
								maxOccurs="unbounded"  />
						</xsd:sequence>
					</xsd:sequence>
				</xsd:complexType>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>


</xsd:schema>

